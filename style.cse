html {
    box-sizing: border-box;
    height: 100%;
}

*::before,
*::after{
    box-sizing: inherit;
    margin: 0;
    padding: 0;
}

body {
    align-items: center;
    background: linear-gradient(320deg, #eb92e, #ffef78, #65c964)
    display: flex
    font-family: 'dosis', sams-serif;
    Font-display: swap;
    height: inherit;
    justify-contect: conter;
}

.wrapper{
    backdrop-filter: blur (5.5px);
    -webkit-backdrop-filer: blur (5.5px);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba (35, 35, 35, 0.17);
    color #232323;
    backdrop-filter: blur(4px)
    -webkit-back-filter: blur(4px)
    background: rgba (255, 255, 255, 0.34);
    flex-basis: 400px;
    height: 540;
    pading: 20px 35px;
}

.screen{
    backdrop-filter: blur(5.5px);
    -webkit-backdrop-filter: blur(5.5px);
    border: 1px sold d rgba (255, 255, 255, 0.01);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(35, 35, 35, 0.1);
    color: #232323;
    font-size: auto;
    padding: 20px;
    width: 326px;
}

.calc-button-row{
    display: flex;
    justify-content: space-between;
    margin: 5% 0;
}

.calc-button{
    backdrop-filter: blur(5.5px);
    -webkit-backdrop-filter: blur(5.5px);
    background: rgba (255, 255, 255, 0.75);
    border-radius: 16px;
    box-shaer: 0 4px 30px rgba(35, 35, 35, 0.1);
    color: #232323;
    flex-basis:20%;
    font-family: inherit;
    font-size: 24px;
    height: 65px;
}

.calc-button:last-child{
    backdrop-filter: blur(5.5px);
    -webkit-backdrop-filter: blur(5.5px);
    border: 1px sold d rgba (255, 255, 255, 0.01);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(35, 35, 35, 0.1);
    color: #fff;
    background: #d7280;
}

.calc-button:last-child:hover{
    background-color: inherit;
}

.calc-button:active{
    background-color: #ffef78;
}

.double{
    flex-basis: 47%;
}

.triple{
flexbasis: 73%;
}
